@model _23DH113573_MyStore.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Chi tiết sản phẩm</h2>

<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>Tên Sản Phẩm</dt>
        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt>Giá </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>
        <dt>Ảnh </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductImage)
        </dd>
        <dt> Mô tả </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>
        <dt> Mục </dt>
        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Cập Nhật", "Edit", new { id = Model.CategoryID }, new { @class = "btn btn-primary btn-sm" }) |
    @Html.ActionLink("Quay lại ", "Index", null, new { @class = "btn btn-primary btn-sm" })
</p>
