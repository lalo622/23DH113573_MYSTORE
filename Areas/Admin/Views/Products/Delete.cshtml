    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-outline-primary btn-sm" /> |
            @Html.ActionLink("Quay lại", "Index")
